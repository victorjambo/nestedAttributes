<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th>pic count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.pics.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

